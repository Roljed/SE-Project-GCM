<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="260.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.MainController">
   <children>
      <Label text="Welcome To GCM" textAlignment="CENTER">
         <font>
            <Font name="Berlin Sans FB Demi Bold" size="24.0" />
         </font>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
      <Label text="World Seller of Digital Maps, Interactive Cities And Vacation Tours" textAlignment="CENTER" wrapText="true">
         <font>
            <Font name="Arial Italic" size="10.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" top="5.0" />
         </VBox.margin>
      </Label>
      <Button alignment="CENTER" mnemonicParsing="false" onAction="#btn_Login" prefHeight="25.0" prefWidth="100.0" text="Sign In" textAlignment="CENTER">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></Button>
      <Button alignment="CENTER" mnemonicParsing="false" onAction="#btn_Register" prefHeight="25.0" prefWidth="100.0" text="Sign Up" textAlignment="CENTER">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></Button>
      <Button alignment="CENTER" mnemonicParsing="false" onAction="#btn_SearchCatalog" text="Search Catalog" />
      <Button alignment="CENTER" mnemonicParsing="false" onAction="#btn_Exit" prefHeight="25.0" prefWidth="100.0" text="Exit" textAlignment="CENTER">
         <VBox.margin>
            <Insets top="50.0" />
         </VBox.margin></Button>
   </children>
</VBox>
