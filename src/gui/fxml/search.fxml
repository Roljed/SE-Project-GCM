<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.SearchScreen">
    <children>
      <Label layoutX="253.0" layoutY="32.0" text="Search">
         <font>
            <Font name="Gisha" size="24.0" />
         </font>
      </Label>
      <VBox alignment="TOP_CENTER" layoutX="138.0" layoutY="100.0" prefHeight="300.0" prefWidth="300.0" spacing="15.0">
         <children>
              <TextField fx:id="requestField" alignment="CENTER" prefHeight="40.0" prefWidth="300.0" promptText="Enter Search" />
            <Label text="Search by">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
              <Button fx:id="searchByDescription" mnemonicParsing="false" onAction="#SearchByDescription" prefHeight="31.0" prefWidth="201.0" text="Site Name" />
              <Button fx:id="searchByCityName" mnemonicParsing="false" onAction="#SearchByCity" prefHeight="31.0" prefWidth="201.0" text="City Name">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
              <Button fx:id="searchBySiteName" mnemonicParsing="false" onAction="#SearchBySite" prefHeight="31.0" prefWidth="201.0" text="Description" />
              <Button fx:id="back" mnemonicParsing="false" onAction="#goBack" text="Back">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
    </children>
</AnchorPane>
